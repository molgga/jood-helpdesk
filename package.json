{
  "name": "jood-helpdesk",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "document"
  ],
  "description": "",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn run bootstrap:install && yarn run package:build",
    "bootstrap:install": "yarn install --production=false",
    "package:build": "yarn run pg-core:build && run-p pg-date:build pg-number:build pg-storage:build pg-string:build pg-timer:build pg-array:build pg-point:build pg-functional:build",
    "package:clear": "run-p pg-core:clear pg-date:clear pg-number:clear pg-storage:clear pg-string:clear pg-timer:clear pg-array:clear pg-point:clear pg-functional:clear",
    "package:unit": "run-p pg-core:unit pg-date:unit pg-number:unit pg-storage:unit pg-string:unit pg-timer:unit pg-array:unit pg-point:unit pg-functional:unit",
    "package:deploy:ready": "yarn install --frozen-lockfile",
    "package:deploy:test": "run-s package:unit",
    "package:deploy:build": "run-s package:build docs:build",
    "pg-array:build": "yarn workspace @jood/helpdesk-array build",
    "pg-array:clear": "yarn workspace @jood/helpdesk-array build:clear",
    "pg-array:unit": "yarn workspace @jood/helpdesk-array test:unit",
    "pg-core:build": "yarn workspace @jood/helpdesk-core build",
    "pg-core:clear": "yarn workspace @jood/helpdesk-core build:clear",
    "pg-core:unit": "yarn workspace @jood/helpdesk-core test:unit",
    "pg-date:build": "yarn workspace @jood/helpdesk-date build",
    "pg-date:clear": "yarn workspace @jood/helpdesk-date build:clear",
    "pg-date:unit": "yarn workspace @jood/helpdesk-date test:unit",
    "pg-functional:build": "yarn workspace @jood/helpdesk-functional build",
    "pg-functional:clear": "yarn workspace @jood/helpdesk-functional build:clear",
    "pg-functional:unit": "yarn workspace @jood/helpdesk-functional test:unit",
    "pg-number:build": "yarn workspace @jood/helpdesk-number build",
    "pg-number:clear": "yarn workspace @jood/helpdesk-number build:clear",
    "pg-number:unit": "yarn workspace @jood/helpdesk-number test:unit",
    "pg-point:build": "yarn workspace @jood/helpdesk-point build",
    "pg-point:clear": "yarn workspace @jood/helpdesk-point build:clear",
    "pg-point:unit": "yarn workspace @jood/helpdesk-point test:unit",
    "pg-storage:build": "yarn workspace @jood/helpdesk-storage build",
    "pg-storage:clear": "yarn workspace @jood/helpdesk-storage build:clear",
    "pg-storage:unit": "yarn workspace @jood/helpdesk-storage test:unit",
    "pg-string:build": "yarn workspace @jood/helpdesk-string build",
    "pg-string:clear": "yarn workspace @jood/helpdesk-string build:clear",
    "pg-string:unit": "yarn workspace @jood/helpdesk-string test:unit",
    "pg-timer:build": "yarn workspace @jood/helpdesk-timer build",
    "pg-timer:clear": "yarn workspace @jood/helpdesk-timer build:clear",
    "pg-timer:unit": "yarn workspace @jood/helpdesk-timer test:unit",
    "docs:build": "yarn workspace document docs:build"
  },
  "keywords": [],
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/jest": "^28.1.6",
    "esbuild": "^0.14.51",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom-testing-mocks": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.77.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
